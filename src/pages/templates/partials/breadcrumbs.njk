{% macro make(seq) %}
  <ul class="breadcrumbs">
    {% for item in seq %}
      <li class="breadcrumbs__item">
        {% if (loop.index) === seq.length %}
        <a class="breadcrumbs__link">{{ item }}</a>
        {% else %}
        <a class="breadcrumbs__link" href="#">{{ item }}</a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
